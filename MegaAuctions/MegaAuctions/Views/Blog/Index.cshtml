@using MegaAuctions.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Seller.cshtml";
    List<Blog> listblog = ViewBag.ListBlog;
}

@*Trang home quản lý Blogs*@

<style>
    tbody tr td button {
        width: 29px;
        height: 29px;
    }

    .tablecenter {
        text-align: center;
    }

    tbody tr td button {
        margin-left: 2px;
    }

    table thead tr th {
        text-align: center;
    }

    .dieuhuongdtbutton {
        display: inline-flex;
    }

    #example_filter input {
        height: 35px;
        width: 300px;
    }

    #example_filter label {
        font-size: 17px;
    }

    .dt-buttons .btn-group {
        margin-right: 100px;
    }

    .addfloat {
        float: left;
        margin-right: 30px;
    }

    .menuimage {
        background: #d0d0d0;
        border-radius: 5px;
        box-shadow: -2px 2px 7px;
        width: 680px;
        height: 150px;
        position: absolute;
        right: 165px;
        z-index: 10000;
        display: inline-block;
        margin: -167px 0px 0px 30px;
        padding: 15px 0px 0px 5px;
        display: none;
    }

        .menuimage:before {
            content: "";
            position: absolute;
            height: 0px;
            width: 0px;
            top: 149px;
            right: 20px; /* 1px buffer for zooming problems while rendering*/
            border-width: 15px;
            border-color: #d0d0d0 transparent transparent transparent;
            border-style: solid;
        }

    .tablecenter .menuimage img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        margin-right: 8px;
        border-radius: 5px;
        box-shadow: 3px 3px 3px;
    }
</style>
<!-- Page wrapper  -->
<div class="page-wrapper">
    <!-- Bread crumb and right sidebar toggle -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Table</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Table</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <!-- column -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Personal Blog Management</h4>
                        <h6 class="card-subtitle">------------</h6>
                        <div class="table-responsive">
                            <button type="button" class="btn btn-success addfloat" onclick="location.href='@Url.Action("Create", "Blog")'"><i class="fas fa-plus"></i>&nbsp;&nbsp;Add Blog</button>
                            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Title Blog</th>
                                        <th>Posting date</th>
                                        <th style="text-align:center;">Function</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var blog in listblog)
                                    {
                                        <tr>
                                            <td class="tablecenter">
                                                <button class="btn btn-warning btn-xs" title="Auction"><i class="fas fa-chart-bar"></i></button>
                                                <button type="submit" class="btn btn-primary btn-xs dt-edit" title="Edit" onclick="location.href='@Url.Action("Edit", "Blog", new { id = blog.idblog})'">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </button>
                                                <button type="submit" class="btn btn-success btn-xs" title="Detail" onclick="location.href='@Url.Action("Detail", "Blog", new { id = blog.idblog})'">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button type="submit" class="btn btn-danger btn-xs" title="Delete" onclick="location.href='@Url.Action("Delete", "Blog", new { id = blog.idblog})'">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer">
        © 2021 Material Pro Admin by <a href="https://www.wrappixel.com/">wrappixel.com </a>
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<script>
    function ShowImage(idimg) {
        var display = $(".tablecenter ." + idimg).css("display");
        if (display != "none") {
            $(".tablecenter ." + idimg).attr("style", "display:none;");
        }
        else {
            $(".menuimage").attr("style", "display:none;");
            $(".tablecenter ." + idimg).attr("style", "display:block;");
        }
    }
</script>


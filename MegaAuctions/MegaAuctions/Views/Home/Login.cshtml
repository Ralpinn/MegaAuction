@using MegaAuctions.Models;
@{
    ViewBag.Title = "Login";
    string statuslogin = Content.StatusLogin; 
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<title>Mega Auction</title>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
<link rel="stylesheet" href="~/Content/css/logincss.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<style>
    #loginfailed {
        color: white;
        position: absolute;
        z-index: 100;
        top: 150px;
        left: 0px;
        width: 0px;
        height: 70px;
        font-size: 20px;
        padding: 20px 15px 15px 30px;
        border-radius: 7px;
        transition: 0.6s cubic-bezier(0, 1.1, 0.5, 1.2);
    }
</style>
<div class="login123">
    @if (statuslogin != "")
    {
        <script>
            function loginfail() {
                document.getElementById("loginfailed").style.backgroundColor = "#ef3a3a";
                document.getElementById("loginfailed").style.width = "320px";
            }
            setTimeout(loginfail, 1000);
        </script>
        <div id="loginfailed">@statuslogin</div>
    }
    <form method="post" class="formlogin">
        <div class="login">
            <i class="fa fa-empire"></i>
            <h2>Login</h2>
            <div class="group"><input type="email" name="gmail" placeholder="Gmail"><i class="fa fa-user"></i></div>
            <div class="group"><input type="password" name="pass" placeholder="Password"><i class="fa fa-lock"></i></div>
            <button type="submit"><i class="fa fa-send"></i>Login</button>
            <p class="fs">Forgot <a href="/Home/Resetpass">Password</a> ? </p>
            <p class="ss">Don't have an account? <a href="">Signup</a></p>
        </div>
    </form>
</div>




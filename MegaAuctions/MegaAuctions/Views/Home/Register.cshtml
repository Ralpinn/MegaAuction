@using MegaAuctions.Models;
@{ 
    ViewBag.Title = "Register";
    string statuslogin = Content.StatusLogin; 
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<title>Mega Auction</title>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
<link rel="stylesheet" href="~/Content/css/logincss.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<style>
    #loginfailed {
        color: white;
        position: absolute;
        z-index: 100;
        top: 100px;
        left: 0px;
        width: 0px;
        height: 70px;
        font-size: 20px;
        padding: 20px 15px 15px 30px;
        border-radius: 7px;
        transition: 0.6s cubic-bezier(0, 1.1, 0.5, 1.2);
    }
    .formlogin .signin {
        text-align: center;
        position: relative;
        width: 400px;
        height: 550px;
    }
    .formlogin input {
        font-size: 18px;
        height: 50px;
        margin-bottom: -10px;
    }
    .formlogin select {
        border: none;
        width: 117px;
    }
</style>
<div class="login123">
    @if (statuslogin != "")
    {
<script>
    function loginfail() {
        document.getElementById("loginfailed").style.backgroundColor = "#ef3a3a";
        document.getElementById("loginfailed").style.width = "320px";
    }
    setTimeout(loginfail, 1000);
</script>
                <div id="loginfailed">@statuslogin</div>}
    <form method="post" class="formlogin" style="height: 650px">
        <div class="signin">
            <i class="fa fa-empire"></i>
            <h2 style="margin-top: -40px">Register</h2>
            <div class="group"><input name="name" required placeholder="Name"><i class="fa fa-user"></i></div>
            <div class="group"><input type="email" required name="email" placeholder="Gmail"><i class="fa fa-lock"></i></div>
            <div class="group"><input type="tel" required name="phone" placeholder="Phone"><i class="fa fa-lock"></i></div>
            <div style="display: flex">
                <div class="group"><input type="date" required name="born" placeholder="Born"></div>
                <div class="group" style="margin: 0px 0px 0px 10px; font-size: 18px; height: 50px; padding: 12px 20px 12px 20px; border: 0; box-shadow: 0px 1.5px black; background-color: white; border-radius: 20px; ">
                    <select name="gender">
                        <option>Nam</option>
                        <option>Nữ</option>
                        <option>Khác</option>
                    </select>
                </div>
            </div>
            <div class="group"><input required name="address" placeholder="Address"><i class="fa fa-user"></i></div>
            <div class="group"><input required type="password" name="password" placeholder="Password"><i class="fa fa-lock"></i></div>
            <button type="submit" style="margin-top: 15px"><i class="fa fa-send"></i>Singin</button>
        </div>
    </form>
</div>




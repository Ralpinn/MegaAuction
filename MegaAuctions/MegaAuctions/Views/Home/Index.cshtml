<style>
    #loginsuccess {
        color: white;
        position: absolute;
        z-index: 0;
        top: 160px;
        right: 0px;
        width: 0px;
        height: 70px;
        font-size: 20px;
        padding: 20px 15px 15px 30px;
        border-radius: 7px;
        transition: 0.6s cubic-bezier(0, 1.1, 0.5, 1.2);

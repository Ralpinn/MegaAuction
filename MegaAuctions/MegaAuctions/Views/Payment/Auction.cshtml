            <label>Cụ thể:</label>
            <input class="form-control input123" id="idSoNha" required placeholder="Vd: Số 28, Tổ 32, Ấp Tiến Thành" />
            <label>Ghi chú:</label>
            <textarea id="idNote" class="form-control input123"></textarea>
